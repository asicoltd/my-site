          "action": "Requires Formal Investigation"
        },
        {
          "title": "IFRS Non-Compliance",
          "description": "Multiple violations of IAS 16, IAS 2, IAS 38, and IAS 1 regarding asset verification and going concern disclosure.",
          "severity": "high",
          "action": "Restatement Required"
        },
        {
          "title": "Financial Distress",
          "description": "Persistent operating losses, massive accumulated deficit, and high leverage position across all years.",
          "severity": "moderate",
          "action": "Going Concern Assessment Needed"
        },
        {
          "title": "Governance Failure",
          "description": "Weak internal controls, no audit committee disclosure, and management override indicators.",
          "severity": "high",
          "action": "Board Enforcement Notice"
        }
